# ---- Postgres (used by docker-compose) ----
POSTGRES_DB=kyrtica_db
POSTGRES_USER=kyrtica
POSTGRES_PASSWORD=supersecretpassword

# ---- App connection strings ----
# If your app runs in Docker, host is 'postgres'
DATABASE_URL=postgresql://kyrtica:supersecretpassword@postgres:5432/kyrtica_db
# If your app runs on your Mac (not in Docker), use localhost instead:
# DATABASE_URL=postgresql://kyrtica:supersecretpassword@localhost:5432/kyrtica_db

# ---- Redis ----
REDIS_URL=redis://redis:6379/0
# For local app (not in Docker):
# REDIS_URL=redis://localhost:6379/0

# ---- Auth / Cloud / LLM ----
JWT_SECRET=change_me_now
S3_BUCKET=your_s3_bucket_name
S3_ACCESS_KEY=your_access_key
S3_SECRET=your_secret_key
LLM_PROVIDER_API_KEY=your_llm_key
